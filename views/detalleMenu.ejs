<!DOCTYPE html>
<html>
  <%-include("./partials/head.ejs")-%>  <!--hago un partial del head, osea, lo borro y lo reemplazo (importo) la parte que esta guardada en la carpeta partials" -->
  <body>
   
    <!-- Navbar (sit on top) -->
  <%-include("./partials/navbar.ejs")-%> <!--hago un partial del navbar, osea, lo borro y lo reemplazo (importo) la parte que esta guardada en la carpeta partials" -->
   
  <!-- Header -->
  <%-include("./partials/header.ejs")-%>
    
  <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuestro Menu</h1>
          <% products.forEach(product => { %>
            <h4> <%=product.title%> </h4>
            <p class="ps-text-grey">
              <%= product.description%> U$S <%=product.price%>  
            </p>
          <% }) %>
          <br />
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <footer class="ps-center ps-light-grey ps-padding-32">
        <p>Powered by Pimienta & Sal</p>
      </footer>
    </div>
  </body>
</html>
